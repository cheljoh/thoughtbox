<!DOCTYPE html>
<html>
<head>
  <title>Thoughtbox</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <%= link_to "Logout", logout_path, method: "delete"%>
  <% else %>
    <%= link_to "Login", login_path%>
  <% end %>

  <% flash.each do |type, message| %>
    <div class="<%= type %>">
      <%= raw(message)%>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
