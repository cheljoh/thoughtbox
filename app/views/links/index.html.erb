<h1>Check out these kewwwll linkkss</h1>

<% if current_user %>
  <%= form_for (Link.new) do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.submit "Submit" %>
  <% end %> <br />
<% end %>


Your special links: <br />
<% @links.each do |link| %>

  <% if link.read %>
    <% button_class = "unread-link" %>
    <% message = "Mark as Unread" %>
    <% color = "color:blue" %>
  <% else %>
    <% button_class = "read-link" %>
    <% message = "Mark as Read" %>
    <% color = "color:red" %>
  <% end %>
  <div>Title: <%= link.title %>:</div> <br />
  <div id="url-<%= link.id %>" style="<%= color %>">URL: <%= link.url %></div> <br />
  <!-- <button id='read-<%= link.id %>' class='<%= button_class %>'><%= message %></button> <br /> -->
  <%= link_to "Edit Link!", edit_link_path(link) %> <br /><br /><br /><br />
<% end %> <br /><br /><br /><br />

